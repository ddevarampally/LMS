<div id="add-new-user-modal" class="modal fade" aria-labelledby="add-new-user-modal-title" aria-hidden="false" role="dialog" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">				
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
				<h3 class="add-new-user-modal-title text-center">Create User</h3>
			</div>
			<div class="modal-body">			
				<form id="add-new-user-form" class="form-horizontal" method="post">
					<div id="add-new-user-form-message" style="font-family: sans-serif;color: red;" ></div>
					<div class="control-group">
						<label class="control-label makeLabelMandatory"> First Name </label>
						<div class="controls">
							<input type="text" name="edit-first-name" id="edit-first-name" maxlength="45" />
						</div>
					</div>
						<div class="control-group">
						<label class="control-label makeLabelMandatory"> Last Name </label>
						<div class="controls">
							<input type="text" name="edit-last-name" id="edit-last-name" maxlength="45"/>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label makeLabelMandatory"> User Name </label>
						<div class="controls">
							<input type="text" name="edit-email" id="edit-email" maxlength="45"/>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"> Phone Number </label>
						<div class="controls">
							<input type="text" name="edit-phone" id="edit-phone" placeholder="(___)___-____" maxlength="10" />
						</div>
					</div>
					<div class="control-group" id="RoleTypes-section">
			            <div class="controls">
			                <h5 style="margin:3px !important" class="span2 text-center"> Role</h5>
			                <div style="border:1px solid;width:45%;background-color:#f5f5f5;padding:5px;">
			                    <div id="admin-section">
			                        <label class="checkbox-inline">
			                            <input type="checkbox" id="edit-add-adminRole">
			                            Admin Role
			                        </label><br>
			                    </div>
			                    <div id="librarian-section">
			                        <label class="checkbox-inline">
			                            <input type="checkbox" id="edit-add-librarianRole">
			                            Librarian Role
			                        </label><br>
			                    </div>
			                    <div class="" id="user-section">
			                        <label class="checkbox-inline">
			                            <input type="checkbox" id="edit-add-userRole">
			                            User Role
			                        </label>
			                    </div>
			                </div>
			            </div>
        			</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn" data-dismiss="modal">Close</button>
				<button type="button" id="btn_save_new_user" class="btn btn-primary">Save</button>
			</div>
		</div>
	</div>
</div>