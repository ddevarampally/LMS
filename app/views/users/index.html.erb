<h2 class="page-heading">Users</h2>

<table id="users_grid" class="display">
	<thead>
		<tr>
			<th>Full Name</th>
			<th> Email Address</th>
			<th>Phone Number</th>
			<th>Role</th>
			<th>Action</th>
		</tr>
	</thead>

	<tbody>
		<% @user_roles.each do |user_role| %>
			<tr>
				<td> <%= user_role.user ? "#{user_role.user.last_name} , #{user_role.user.first_name}" : '' %> </td>
				<td> <%= user_role.user ? user_role.user.email_address : '' %> </td>
				<td> <%= user_role.user ? user_role.user.mobile_number : '' %> </td> 

				<td> Role </td>
				<td> <%=link_to 'Edit', users_edit_path, {:class => "font-family"} %> | <%=link_to 'Delete', users_delete_path, {:class => "font-family"} %> </td>
			</tr>

		<% end %>
	</tbody>
</table>

<script type="text/javascript">

	$(document).ready(function() {  
  	if(!$( "#users_grid" ).hasClass("dataTable")) {
  		$('#users_grid').dataTable({
		  	sPaginationType: "full_numbers",
		  	bJQueryUI: true
		})		
	  	$('#users_grid_wrapper').addClass('datatable-format')
	  }	
   })
	
</script>