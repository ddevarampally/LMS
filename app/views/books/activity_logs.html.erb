<h2 class="page-heading">Activity Logs</h2>
<br>
<table id="activity_logs_grid" class="display" data-source="<%= books_activity_logs_url(format: "json") %>">
	<thead>
		<tr>
			<th>Book Name</th>
			<th>Description</th>
			<th>Updated Date</th>
		</tr>
	</thead>
	<tbody>		
	</tbody>	
</table>
	
<script type="text/javascript">

  $(document).ready(function() {  
  	if(!$( "#activity_logs_grid" ).hasClass("dataTable")) {
  		$('#activity_logs_grid').dataTable({
		  	sPaginationType: "full_numbers",
		  	bJQueryUI: true,		  	
		  	bProcessing: true,
    		bServerSide: true,
    		sAjaxSource: $('#activity_logs_grid').data('source')
		})		
	  	$('#activity_logs_grid_wrapper').addClass('datatable-format')
	  }	
   })

</script>