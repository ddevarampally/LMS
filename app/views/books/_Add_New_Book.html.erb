<div id="add-new-book-modal" class="modal fade" aria-labelledby="add-new-book-modal-title" aria-hidden="false" role="dialog" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">				
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
				<h3 class="add-new-book-modal-title text-center">Add Book</h3>
			</div>
			<div class="modal-body">			
				<form id="add-new-book-form" class="form-horizontal" method="post">
					<div id="add-new-book-form-message" style="font-family: sans-serif;color: red;" ></div>

					<div class="control-group" id="book-page-type-section">
						<label class="control-label"> Select Page Type </label>
						<div class="controls">
							<select name="sel-page-type" id="sel-page-type" class="select-format"> 
								<option value=""> </option>
								<option value="FrontPage"> Front Page </option>
								<option value="BackPage"> Back Page </option>
								<option value="OtherPages">Other Pages </option>
								<option value="IndexPages"> Index Pages </option>
							</select> 
						</div>
					</div>
					<div class="control-group" id="book-picture-section" hidden="hidden">
						<label class="control-label"> Upload Book Picture </label>
						<div class="controls">
							<input type="file" name="edit-book-picture[]" id="edit-book-picture"/>
						</div>
					</div>
					<div id='images-to-upload'>
					</div>
					<div class="control-group">
						<label class="control-label makeLabelMandatory">Book Name </label>
						<div class="controls">
							<input type="text" name="edit-book-name" id="edit-book-name" maxlength="50"/>
						</div>
					</div>					
					<div class="control-group">
						<label class="control-label">Author Name</label>
						<div class="controls">
							<input type="text" name="edit-author" id="edit-author" maxlength="50" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">Edition</label>
						<div class="controls">
							<input type="text" name="edit-edition" id="edit-edition" maxlength="10" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">Publication Name</label>
						<div class="controls">
							<input type="text" name="edit-publication" id="edit-publication" maxlength="50" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">Publication Year</label>
						<div class="controls">
							<input type="text" name="edit-year-publish" id="edit-year-publish" maxlength="4" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label makeLabelMandatory">Description </label>
						<div class="controls">
						<textarea type="text" name="edit-description" id="edit-description" maxlength="500" style="width: 250px;height: 60px;"></textarea>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn" data-dismiss="modal">Close</button>
				<button type="button" id="btn_save_new_book" class="btn btn-primary">Save</button>
			</div>
		</div>
	</div>
</div>