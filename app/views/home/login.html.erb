<h2 class="page-heading">Login</h2>
<br>

<%= form_for(@user, url: home_validate_login_path) do |f| %>
	<div class="container" style="width: 15%;">
		<div class="form-group">
			<%= f.text_field :user_name, required: true, :class => "form-control textbox-format", placeholder: "User Name", autofocus: true %>
		</div>
		<div class="form-group">
			<%= f.password_field :password, required: true, :class => "form-control textbox-format", placeholder: "Password" %>
		</div>
		<div class="form-group span3">
			<%= f.submit "Login", :class => "btn btn-primary" %> 
			<%= link_to "Forgot Password", '#', :id=> "forgot-password-link", :class => "btn btn-link", "data-toggle" => "modal" %>	
		</div>
	</div>
	
<% end %>

<%= render partial: "forgot_password" %>

<script type="text/javascript">
	
$(document).ready(function() {	
	$('#forgot-password-link').click(function() {
		$('#forgot-password-form-message').empty();
		$('#email_address').val('');

		$('#forgot-password-modal').modal('show');
	});

	$('#user_user_name, #user_password').on('keypress', function(e) {
    	if (e.which == 32) {	//don't allow space
        	return false;
    	}
    });
});

</script>