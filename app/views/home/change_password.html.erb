<h2 class="page-heading">Change Password</h2>
<br>

<%= form_for(@user, url: home_change_password_path, html: { :id => "change-password-form" }) do |f| %>
	<div class="container" style="width: 15%;">
		<% if @user.user_name.nil? %>
			<div class="form-group">
				<%= f.text_field :user_name, required: true, :class => "form-control textbox-format", placeholder: "User Name", autofocus: true, maxlength: 20 %>
			</div>
		<% end %>
		<% if !@user.is_change_pwd_link.nil? && @user.is_change_pwd_link %>
			<div class="form-group">			
				<%= f.hidden_field :is_change_pwd_link %>
				<%= f.password_field :current_password, required: true, :class => "form-control textbox-format", placeholder: "Current Password", autofocus: true, maxlength: 20 %>			
			</div>
		<% end %>
		<div class="form-group">
			<%= f.password_field :new_password, required: true, :class => "form-control textbox-format", placeholder: "New Password", maxlength: 20, pattern: '^(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*\W)[A-Za-z\d\W]{8,}', title: "Minimum 8 characters at least 1 Uppercase Alphabet, 1 Lowercase Alphabet, 1 Number and 1 Special Character" %>
		</div>
		<div class="form-group">
			<%= f.password_field :confirm_password, required: true, :class => "form-control textbox-format", placeholder: "Confirm Password", maxlength: 20 %>
		</div>
		<div class="form-group">
			<%= f.button "Clear", type: "reset", :class => "btn btn-info" %> &nbsp;
			<%= f.submit "Confirm", :class => "btn btn-primary" %>
		</div>
	</div>
<% end %>	
<br>
<div id="change-password-form-message" class="flash-message"></div>